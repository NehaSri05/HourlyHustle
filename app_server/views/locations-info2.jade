extends layout

block content
  .row.page-header(style="margin-bottom: 20px;") 
    .col-lg-12
      h1(style="margin-top: 20px;") Hotels

  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p.rating
            span.glyphicon.glyphicon-star
            span.glyphicon.glyphicon-star
            span.glyphicon.glyphicon-star
            span.glyphicon.glyphicon-star-empty
            span.glyphicon.glyphicon-star-empty
          p Vijayapuri Colony, Narapally, Pocharam

         
          .panel.panel-primary
            .panel-heading
              h2.panel-title Opening hours
            .panel-body
              p Monday - Sunday: 24/7

          .panel.panel-primary
            .panel-heading
              h2.panel-title Facilities
            .panel-body
              span.label.label-warning
                span.glyphicon.glyphicon-ok
                | &nbsp;Customizable Shifts
              | &nbsp;
              span.label.label-warning
                span.glyphicon.glyphicon-ok
                | &nbsp;Free or Discounted Meals
              | &nbsp;
              span.label.label-warning
                span.glyphicon.glyphicon-ok
                | &nbsp;Paid Time Off
              | &nbsp;
              
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title Location map
            .panel-body
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3618.422190649464!2d78.63678937493559!3d17.42241848347073!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb9fab90ca92e1%3A0x57a4f4521fd43ca8!2sSri%20Suruchi%20Restaurant!5e1!3m2!1sen!2sin!4v1727368750592!5m2!1sen!2sin" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

      .panel.panel-primary
        .panel-heading
          h2.panel-title Timespan & Salary
        .panel-body
         
          h4 Morning : 6:00am - 12:00pm
          p Duration : 3 months
          p Salary: ₹15,000 per month

          
          h4 Afternoon : 12:00pm - 6:00pm
          p Duration : 3 months
          p Salary: ₹12,000 per month

         
          h4 Evening : 6:00pm - 12:00am
          p Duration : 3 months
          p Salary: ₹18,000 per month

          h4 Night : 12:00am - 6:00am
          p Duration : 3 months 
          p Salary : ₹25,000 per month
          
                
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href='/location/review/new') Add review
              h2.panel-title Customer reviews
            .panel-body.review-container
              .row
                .review
                  .well.well-sm.review-header
